<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="535.0" prefWidth="522.0" styleClass="breeding-operations-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BreedingOperationsController">

    <Label styleClass="title-label" text="Breeding Dashboard" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <font>
            <Font name="Arial Bold" size="18" />
        </font>
    </Label>

    <ComboBox fx:id="broodstockSpeciesComboBox" prefWidth="250" promptText="Select Broodstock Species" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="70" />

    <Label text="Broodstock Health:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="120" />
    <TextField fx:id="broodstockHealthField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="140" />

    <Label text="Spawning Cycle:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="180" />
    <TextField fx:id="spawningCycleField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="200" />

    <Button fx:id="eggCollectionBtn" onAction="#handleEggCollection" prefWidth="250" text="Manage Egg Collection" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="250" />

    <Button fx:id="fingerlingsTransferBtn" onAction="#handleFingerlingsTransfer" prefWidth="250" text="Transfer Fingerlings" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="300" />

    <TextArea fx:id="geneticDiversityNotesArea" prefHeight="100" prefWidth="250" promptText="Genetic Diversity Notes" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="350" />
</AnchorPane>
