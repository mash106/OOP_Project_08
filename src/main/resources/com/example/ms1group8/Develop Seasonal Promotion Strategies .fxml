<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="553.0" prefWidth="632.0" styleClass="seasonal-promotions-pane" type="AnchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ms1group8.SeasonalPromotionsController">

    <Label styleClass="title-label" text="Seasonal Promotions Planner" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <font>
            <Font name="Arial Bold" size="18" />
        </font>
    </Label>

    <ComboBox fx:id="seasonComboBox" prefWidth="250" promptText="Select Season" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="70">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Spring" />
                <String fx:value="Summer" />
                <String fx:value="Autumn" />
                <String fx:value="Winter" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Promotion Concept:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="120" />
    <TextArea fx:id="promotionConceptArea" prefHeight="190.0" prefWidth="533.0" promptText="Describe promotion details" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="140" />

    <Button fx:id="createPromotionBtn" layoutX="23.0" layoutY="351.0" onAction="#handleCreatePromotion" prefWidth="250" text="Create Promotion" AnchorPane.leftAnchor="23.0" AnchorPane.topAnchor="351.0" />

    <Button fx:id="schedulePromotionBtn" layoutX="23.0" layoutY="403.0" onAction="#handleSchedulePromotion" prefWidth="250" text="Schedule Promotion" AnchorPane.leftAnchor="23.0" AnchorPane.topAnchor="403.0" />
</fx:root>
