<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="530.0" prefWidth="585.0" styleClass="fish-stock-records-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FishStockRecordsController">

    <Label styleClass="title-label" text="Fish Stock Management" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
        <font>
            <Font name="Arial Bold" size="18" />
        </font>
    </Label>

    <TableView fx:id="stockTable" prefHeight="200" prefWidth="411.0" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="70">
        <columns>
            <TableColumn fx:id="speciesColumn" prefWidth="113.0" text="Species" />
            <TableColumn fx:id="tankColumn" prefWidth="137.0" text="Tank" />
            <TableColumn fx:id="countColumn" prefWidth="160.0" text="Total Count" />
        </columns>
    </TableView>

    <Label text="Growth Rate:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="280" />
    <TextField fx:id="growthRateField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="300" />

    <Label text="Mortality Rate:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="340" />
    <TextField fx:id="mortalityRateField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="360" />

    <Button fx:id="generateReportBtn" onAction="#handleGenerateReport" prefWidth="250" text="Generate Stock Report" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="400" />
</AnchorPane>
