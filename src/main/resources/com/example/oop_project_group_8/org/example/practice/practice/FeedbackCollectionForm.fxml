<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.org.example.practice.practice.FeedbackController">
    <Label text="Overall Satisfaction" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <Slider fx:id="satisfactionSlider" max="10" min="0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0" />

    <TextArea fx:id="feedbackArea" promptText="Please provide your detailed feedback" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0" />

    <Button fx:id="submitFeedbackButton" onAction="#submitFeedback" text="Submit Feedback" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />

    <Button fx:id="backButton" text="Back" onAction="#handleBackAction" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />
</AnchorPane>
