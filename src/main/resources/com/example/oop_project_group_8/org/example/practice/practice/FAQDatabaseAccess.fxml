<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.org.example.practice.practice.FaqDatabaseAccessController">
    <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search FAQ" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <TreeView fx:id="faqCategoriesTree" onMouseClicked="#handleCategorySelection" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="80.0" />

    <TextArea fx:id="faqContentArea" editable="false" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0" />

    <Button fx:id="submitFAQRequestButton" onAction="#submitFAQRequest" text="Submit FAQ Request" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />

    <Button fx:id="backButton" text="Back" onAction="#handleBackAction" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />
</AnchorPane>
