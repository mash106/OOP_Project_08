    <ComboBox fx:id="productTypeComboBox" layoutX="50.0" layoutY="100.0" prefWidth="300.0" promptText="Select Product Type" />

    <TableView fx:id="productCatalogTable" layoutX="50.0" layoutY="150.0" prefHeight="400.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="productNameTC" prefWidth="200.0" text="Product Name" />
            <TableColumn fx:id="speciesTC" prefWidth="200.0" text="Species" />
            <TableColumn fx:id="priceTC" prefWidth="100.0" text="Price" />
            <TableColumn fx:id="productDetailsTC" prefWidth="200.0" text="Details" />
        </columns>
    </TableView>

    <Button layoutX="50.0" layoutY="560.0" onAction="#viewProductDetailsButtonOnAction" style="-fx-background-color: green; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" text="View Product Details" />

</AnchorPane>
