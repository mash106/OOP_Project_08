<AnchorPane prefHeight="599.0" prefWidth="691.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" styleClass="breeding-operations-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.Tasin_2211161.BreedingOperationsController">

    <Button fx:id="backBtn" onAction="#handleBackButton" prefWidth="100" text="Back" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" />

    <Label styleClass="title-label" text="Breeding Dashboard" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="70">
        <font>
            <Font name="Arial Bold" size="18" />
        </font>
    </Label>

    <ComboBox fx:id="broodstockSpeciesComboBox" prefWidth="250" promptText="Select Broodstock Species" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="120" />

    <Label text="Broodstock Health:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="170" />
    <TextField fx:id="broodstockHealthField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="190" />

    <Label text="Spawning Cycle:" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="230" />
    <TextField fx:id="spawningCycleField" editable="false" prefWidth="250" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="250" />

    <Button fx:id="eggCollectionBtn" onAction="#handleEggCollection" prefWidth="250" text="Manage Egg Collection" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="300" />

    <Button fx:id="fingerlingsTransferBtn" onAction="#handleFingerlingsTransfer" prefWidth="250" text="Transfer Fingerlings" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="350" />

    <TextArea fx:id="geneticDiversityNotesArea" prefHeight="100" prefWidth="250" promptText="Genetic Diversity Notes" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="400" />

</AnchorPane>
