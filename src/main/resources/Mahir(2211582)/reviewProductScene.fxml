<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="568.0" prefWidth="816.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.ReviewProductSceneController">

    <Label layoutX="50.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-text-fill: #1E4E8C;" text="Submit Product Review" />

    <ComboBox fx:id="selectProductComboBox" layoutX="50.0" layoutY="100.0" prefWidth="700.0" promptText="Select Product" />

    <Label layoutX="50.0" layoutY="170.0" text="Rating:" textFill="WHITE" />

    <TextArea fx:id="reviewTextArea" layoutX="50.0" layoutY="220.0" prefHeight="200.0" prefWidth="700.0" promptText="Write your review here..." />

    <Button layoutX="50.0" layoutY="500.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" text="Submit Review" />
   <RadioButton layoutX="109.0" layoutY="170.0" mnemonicParsing="false" text="1" textFill="WHITE">
      <toggleGroup>
         <ToggleGroup fx:id="ratingTG" />
      </toggleGroup>
   </RadioButton>
   <RadioButton layoutX="539.0" layoutY="172.0" mnemonicParsing="false" text="5" textFill="WHITE" toggleGroup="$ratingTG" />
   <RadioButton layoutX="438.0" layoutY="170.0" mnemonicParsing="false" text="4" textFill="WHITE" toggleGroup="$ratingTG" />
   <RadioButton layoutX="328.0" layoutY="170.0" mnemonicParsing="false" text="3" textFill="WHITE" toggleGroup="$ratingTG" />
   <RadioButton layoutX="217.0" layoutY="170.0" mnemonicParsing="false" text="2" textFill="WHITE" toggleGroup="$ratingTG" />

</AnchorPane>
