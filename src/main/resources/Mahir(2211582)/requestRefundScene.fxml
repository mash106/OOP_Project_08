<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="568.0" prefWidth="816.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.RequestRefundSceneController">
    <Label layoutX="50.0" layoutY="30.0"
           text="Refund Request"
           style="-fx-font-size: 24px; -fx-text-fill: #1E4E8C;"/>

    <TableView fx:id="refundEligibleOrdersTable"
               layoutX="50.0" layoutY="100.0"
               prefHeight="300.0"
               prefWidth="700.0">
        <columns>
            <TableColumn text="Order ID" prefWidth="150.0"/>
            <TableColumn text="Product" prefWidth="250.0"/>
            <TableColumn text="Date" prefWidth="150.0"/>
            <TableColumn text="Refund Status" prefWidth="150.0"/>
        </columns>
    </TableView>

    <TextArea fx:id="refundReasonTextArea"
              layoutX="50.0" layoutY="420.0"
              prefHeight="100.0"
              prefWidth="700.0"
              promptText="Explain reason for refund request"/>

    <Button text="Submit Refund Request"
            layoutX="50.0" layoutY="500.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;"/>
</AnchorPane>
