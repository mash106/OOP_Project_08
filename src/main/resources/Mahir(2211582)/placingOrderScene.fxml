<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="568.0" prefWidth="816.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project_group_8.PlacingOrderSceneController">

    <Label layoutX="50.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-text-fill: #1E4E8C;" text="Place Order" />

    <TableView fx:id="cartTable" layoutX="50.0" layoutY="100.0" prefHeight="200.0" prefWidth="700.0">
        <columns>
            <TableColumn prefWidth="300.0" text="Product" />
            <TableColumn prefWidth="100.0" text="Quantity" />
            <TableColumn prefWidth="100.0" text="Price" />
        </columns>
    </TableView>

    <TextField fx:id="nameField" layoutX="50.0" layoutY="350.0" prefWidth="300.0" promptText="Full Name" />

    <TextField fx:id="addressField" layoutX="400.0" layoutY="350.0" prefWidth="350.0" promptText="Shipping Address" />

    <ComboBox fx:id="paymentMethodComboBox" layoutX="50.0" layoutY="420.0" prefWidth="300.0" promptText="Payment Method" />

    <Button layoutX="50.0" layoutY="500.0" style="-fx-background-color: #e74c3c;
            -fx-text-fill: white;
            -fx-background-radius: 5;
            -fx-padding: 10 20;"
             text="Place Order" />

</AnchorPane>
