<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oop_project_group_8.ProductDetailSceneController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);">
    <Label layoutX="50.0" layoutY="30.0"
           text="Product Details"
           style="-fx-font-size: 24px; -fx-text-fill: #1E4E8C;"/>

    <ImageView fx:id="productImage"
               layoutX="50.0" layoutY="100.0"
               fitHeight="250.0" fitWidth="350.0"
               preserveRatio="true"/>

    <Label fx:id="productNameLabel"
           layoutX="450.0" layoutY="100.0"
           style="-fx-font-size: 18px;"/>

    <Label fx:id="priceLabel"
           layoutX="450.0" layoutY="150.0"
           style="-fx-font-size: 16px;"/>

    <Label fx:id="availabilityLabel"
           layoutX="450.0" layoutY="200.0"
           style="-fx-font-size: 16px;"/>

    <Button text="Add to Cart"
            layoutX="450.0" layoutY="250.0"
            style="-fx-background-color: #e74c3c;
               -fx-text-fill: white;
               -fx-background-radius: 5;
               -fx-padding: 10 20;"/>

</AnchorPane>
