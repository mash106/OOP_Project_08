<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="706.0" prefWidth="687.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.practice.OrderTrackingController">

    <TextField fx:id="orderNumberField" promptText="Enter Order Number" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />


    <TableView fx:id="orderDetailsTable" AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
        <columns>
            <TableColumn fx:id="detailColumn" text="Order Detail" />
            <TableColumn fx:id="valueColumn" text="Value" />
        </columns>
    </TableView>


    <ComboBox fx:id="orderStatusComboBox" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="20.0" />


    <TextArea fx:id="updateNotesArea" promptText="Update Notes" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />


    <Button fx:id="updateOrderButton" onAction="#handleUpdateOrder" text="Update Order" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    <Button fx:id="backButton" text="Back" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" />

</AnchorPane>
