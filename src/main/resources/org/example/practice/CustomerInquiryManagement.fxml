<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="612.0" prefWidth="549.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.practice.CustomerInquiryController">
    <Button fx:id="newInquiryButton" text="New Inquiry" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <TableView fx:id="inquiryTableView" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
        <columns>
            <TableColumn fx:id="inquiryIdColumn" text="Inquiry ID" />
            <TableColumn fx:id="customerNameColumn" prefWidth="135.0" text="Customer Name" />
            <TableColumn fx:id="inquiryCategoryColumn" prefWidth="153.0" text="Inquiry Category" />
            <TableColumn fx:id="statusColumn" prefWidth="116.0" text="Status" />
        </columns>
    </TableView>

    <ComboBox fx:id="inquiryCategoryComboBox" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />

    <Button fx:id="submitInquiryButton" text="Submit Inquiry" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />

    <Button fx:id="backButton" text="Back" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" />
</AnchorPane>
