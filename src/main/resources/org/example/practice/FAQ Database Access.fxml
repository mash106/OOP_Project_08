<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root type="AnchorPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.practice.FaqDatabaseAccessController">
    <TextField fx:id="searchField" promptText="Search FAQ" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" onKeyReleased="#handleSearch" />

    <TreeView fx:id="faqCategoriesTree" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="300.0" AnchorPane.topAnchor="80.0" onMouseClicked="#handleCategorySelection" />

    <TextArea fx:id="faqContentArea" editable="false" AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0" />

    <Button fx:id="submitFAQRequestButton" text="Submit FAQ Request" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" onAction="#submitFAQRequest" />
</fx:root>
