<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="644.0" prefWidth="701.0" style="-fx-background-color: linear-gradient(to bottom, #4CA1AF, #2C3E50);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.practice.EmployeeDatabaseController">
    <TableView fx:id="employeeTableView" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="201.0" text="Employee ID" />
            <TableColumn fx:id="nameColumn" prefWidth="117.0" text="Name" />
            <TableColumn fx:id="jobTitleColumn" prefWidth="266.0" text="Job Title" />
        </columns>
    </TableView>

    <Button fx:id="addEmployeeButton" onAction="#addEmployee" text="Add New Employee" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />

    <Button fx:id="editEmployeeButton" onAction="#editEmployee" text="Edit Employee" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="200.0" />

    <Button fx:id="deleteEmployeeButton" onAction="#deleteEmployee" text="Delete Employee" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />
</AnchorPane>
