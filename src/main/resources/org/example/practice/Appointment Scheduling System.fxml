<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="org.example.practice.AppointmentController"
            prefHeight="400.0" prefWidth="600.0">

    <ComboBox fx:id="serviceComboBox" promptText="Select Service"
              AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              prefWidth="300.0" />

    <DatePicker fx:id="appointmentDatePicker"
                AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0"
                prefWidth="300.0" />

    <ComboBox fx:id="timeSlotComboBox" promptText="Select Time Slot"
              AnchorPane.topAnchor="140.0" AnchorPane.leftAnchor="20.0"
              prefWidth="300.0" />

    <Label fx:id="confirmationLabel" text="Schedule your appointment"
           AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="100.0"
           style="-fx-text-fill: black; -fx-font-size: 14;" />

    <Button fx:id="scheduleAppointmentButton" text="Schedule Appointment"
            AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="50.0"
            prefWidth="150.0" />

</AnchorPane>
