<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="695.0" prefWidth="615.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.fishhatchery.hr.LeaveManagementController">
    <ComboBox fx:id="employeeComboBox" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <TableView fx:id="leaveTableView" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
        <columns>
            <TableColumn fx:id="leaveTypeColumn" text="Leave Type" />
            <TableColumn fx:id="startDateColumn" text="Start Date" />
            <TableColumn fx:id="endDateColumn" text="End Date" />
            <TableColumn fx:id="statusColumn" text="Status" />
        </columns>
    </TableView>

    <Button fx:id="applyLeaveButton" text="Apply Leave" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" />

    <Button fx:id="approveRejectButton" text="Approve/Reject" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="20.0" />
</AnchorPane>
